{
  "name": "GIST 604B - M3A2: Pandas Environmental Analysis with AI",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  
  // Enable Docker-in-Docker for grading system
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "enableNonRootDocker": "true"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        // Python Development
        "ms-python.python",
        "ms-python.pylance", 
        "ms-python.black-formatter",
        "charliermarsh.ruff",
        "ms-toolsai.jupyter",
        
        // GitHub Copilot AI Integration
        "github.copilot",
        "github.copilot-chat",
        
        // Git and Collaboration
        "eamodio.gitlens",
        "github.vscode-pull-request-github",
        
        // Development Tools
        "ms-vscode.test-adapter-converter",
        "littlefoxteam.vscode-python-test-adapter",
        "streetsidesoftware.code-spell-checker"
      ],
      "settings": {
        // GitHub Copilot Configuration
        "github.copilot.enable": {
          "*": true,
          "python": true,
          "jupyter": true,
          "markdown": true,
          "yaml": true
        },
        "github.copilot.advanced": {
          "debug.overrideEngine": "codex"
        },
        
        // Python Configuration
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": false,
        "python.linting.flake8Enabled": true,
        "python.formatting.provider": "black",
        "python.testing.pytestEnabled": true,
        "python.testing.unittestEnabled": false,
        "python.testing.pytestArgs": [
          "tests/"
        ],
        
        // Editor Configuration for AI Learning
        "editor.inlineSuggest.enabled": true,
        "editor.suggestSelection": "first",
        "editor.tabCompletion": "on",
        "editor.wordBasedSuggestions": false,
        
        // File Explorer
        "files.exclude": {
          "**/__pycache__": true,
          "**/.pytest_cache": true,
          "**/.*": false
        }
      }
    }
  },
  "forwardPorts": [8888],
  "postCreateCommand": "pip install -r requirements.txt && echo '\nü§ñ AI-Enhanced GIS Development Environment Ready!' && echo '‚úÖ GitHub Copilot Pro integrated for learning assistance' && echo 'üê≥ Docker-in-Docker enabled for grading system' && echo 'üìö Try asking Copilot: \"How do I filter a pandas DataFrame with multiple conditions?\"' && echo 'üí° Use Ctrl+Shift+I (Cmd+Shift+I on Mac) to open Copilot Chat' && echo 'üéØ Focus on learning pandas concepts while AI handles syntax!' && echo 'üß™ Use \"make build\" then \"make grade\" to test your assignment'",
  "remoteUser": "vscode",
  
  // Mount Docker socket for Docker-in-Docker functionality
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ]
}