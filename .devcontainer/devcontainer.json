{
  "name": "M3A2: Pandas Environmental Analysis - AI-Enhanced Learning",
  "image": "aaryno/devcontainer-base-python:fall-2025",
  
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.pylance",
        "ms-toolsai.jupyter",
        "github.copilot",
        "github.copilot-chat",
        "ms-python.black-formatter",
        "charliermarsh.ruff",
        "eamodio.gitlens"
      ],
      "settings": {
        "github.copilot.enable": {
          "*": true,
          "python": true,
          "jupyter": true
        },
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "jupyter.askForKernelRestart": false
      }
    }
  },
  
  "forwardPorts": [8888],
  "portsAttributes": {
    "8888": {
      "label": "Jupyter Lab",
      "onAutoForward": "notify"
    }
  },
  
  "postCreateCommand": "echo 'ðŸ¤– M3A2 AI-Enhanced Environment Ready! GitHub Copilot enabled for pandas learning with Ask/Agent/Edit modes. All packages pre-installed with UV.'",
  
  "remoteUser": "vscode"
}
